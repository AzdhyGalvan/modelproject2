<h1 class="is-size-2 has-text-weight-bold has-text-centered is-italic">Editar Rutina</h1>

<form action="/routines/routines/{{_id}}/edit" method="post" enctype="multipart/form-data">


<div class="field">
  <label class="label">Titulo:</label>
  <input class="input is-warning" style="width: 33%;" type="text" name="title" value="{{title}}">
  <br>
</div>

<div class="field">
  <label class="label">Duracion:</label>
  <input class="input is-warning" style="width: 33%;" type="number" min="1" max="15" name="difficulty" value="{{difficulty}}">
  <br>
</div>


<div class="field">
  <label class="label">Descripcion:</label>
  <textarea class="textarea is-warning"  name="description" cols="30" rows="5">{{description}}</textarea>
  <br>
</div>


<label class="label">Imagen:</label>
  <input class="input is-warning" style="width: 33%;" type="file" name="routine-image" value="{{imageUr}}">

<button class="button is-focused yellow is-warning" type="submit">Guardar</button>

</form>


