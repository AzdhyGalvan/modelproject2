

<h1 class="is-size-1 has-text-centered mb-5 yellow">Lista de ejercicios</h1>

<div class="table-exercise">
<table class="table is-striped">
<thead>
    <tr>
        <th>Opciones</th>
        <th>Ilustracion</th>
        <th>Ejercicio</th>
        <th>Series</th>
        <th>Repeticiones</th>
        <th>Descansos</th>
    </tr>
</thead>

{{#each exercise}}
<tr>
    <td>
        <a href="/exercise/exercise-edit/{{id}}">Editar</a>
        <a href="/exercise/exercise-delete/{{id}}">Borrar</a>

    </td>
    <td><figure><img src="{{imageUrl}}" width="400" height="400"></figure> </td>
    <td>{{exercise}}</td>
    <td>{{series}}</td>
    <td>{{repetitions}}</td>
    <td>{{breaks}}</td>



</tr>
{{/each}}
</table>
</div>


